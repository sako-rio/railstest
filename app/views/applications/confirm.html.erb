<div class="page-header">
  <h1>送信内容の確認　以下の内容でよろしいですか？</h1>
</div>

<%= form_for @application, :url => mail_send_path do |f| %>
  <div align="center">
    <table class="application_content_1">
      <tr>
        <th><%= f.label :name, t('①お名前')%></th>
        <td><font color=#000000>　　　　　　　　　　　　k</font></td>
        <td><%= f.text_field :name, :readonly => true %></td>
      </tr>
    </table>
    <table class="application_content_2">
      <tr>
        <th><%= f.label :age, t('②年齢') %></th>
        <td><font color=#000000>　　　　　　　　　　　　　k</font></td>
        <td><%= f.text_field :age, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_3">
      <tr>
        <th><%= f.label :height, t('③身長') %></th>
        <td><font color=#000000>　　　　　　　　　　　　　k</font></td>
        <td><%= f.text_field :height, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_4">
      <tr>
        <th><%= f.label :weight, t('④体重') %></th>
        <td><font color=#000000>　　　　　　　　　　　　　k</font></td>
        <td><%= f.text_field :weight, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_5">
      <tr>
        <th><%= f.label :threesize, t('⑤スリーサイズ（B/W/H/)') %></th>
        <td>　　　　</td>
        <td><%= f.text_field :threesize, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_6">
      <tr>
        <th><%= f.label :cup, t('⑥cup数') %></th>
        <td><font color=#000000>　　　　　　　　　　　　k</font></td>
        <td><%= f.text_field :cup, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_7">
      <tr>
        <th><%= f.label :address, t('⑦お住まい') %></th>
        <td>　　　　　　　　　　　　</td>
        <td><%= f.text_field :address, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_8">
      <tr>
        <th><%= f.label :experience, t('⑧風俗経験(あり・なし）') %></th>
        <td><font color=#000000>　　　　　k</font></td>
        <td><%= f.text_field :experience, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_9">
      <tr>
        <th><%= f.label :profession, t('⑨現在の職業') %></th>
        <td>　　　　　　　　　　　</td>
        <td><%= f.text_field :profession, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_10">
      <tr>
        <th><%= f.label :preferreddate, t('⑩面接希望日時（何月/何日/時間）') %></th>
        <td>　</td>
        <td><%= f.text_field :preferreddate, :readonly => true  %></td>
      </tr>
    </table>
    <table class="application_content_11">
      <tr>
        <th><%= f.label :question, t('⑪質問事項等')  %></th>
        <td>　　　　　　　　　　　</td>
        <td><%= f.text_field :question, :readonly => true %></td>
      </tr>
    </table>
    <%= f.submit '送信', class: 'btn-primary' %>
    <br>
    <%= link_to '戻る', :back, class: 'btn-primary' %>
  </div>
<% end %>
