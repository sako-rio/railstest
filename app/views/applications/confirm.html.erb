<div class="page-header">
  <h1>お問い合わせ</h1>
</div>

<%= form_for @application, :url => applications_thanks_path do |f| %>
  <table class="applications_thanks">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @application.name %>
      </td>
    </tr>
  </table>
  <%= f.submit '送信', class: 'btn btn-primary' %>
<% end %>
