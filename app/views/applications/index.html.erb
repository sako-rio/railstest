<%= form_for @inquiry, :url => applications_confirm_path do |f| %>
  <div align="center">
    <td><%= image_tag 'top2.jpg', id: 'top_icon_5' %></td>
  </div>

  <div align="center">
    <div class="taitle">
      <table>
        <tr>
          <th></th>
          <td>応募フォーム</td>
        </tr>
      </table>
    </div>
  </div>

  <br>
  <br>

  <div align="center">
    <br>
    <br>
    <br>
    <br>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :name, t('①お名前')%></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :name %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :age, t('②年齢') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :age %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :height, t('③身長') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :height %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :weight, t('④体重') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :weight %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :threesize, t("⑤スリーサイズ（B/W/H/)") %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :threesize %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :cup, t('⑥cup数') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :cup %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :address, t('⑦お住まい') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :address %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :experience, t("⑧風俗経験(あり・なし）") %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :experience %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :profession, t('⑨現在の職業') %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :profession %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :preferreddate, t("⑩面接希望日時（何月/何日/時間)") %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :preferreddate %></div>
    </div>

    <div class="row application_content">
      <div class="col-md-4 col-xs-4"><%= f.label :question, t('⑪質問事項等')  %></div>
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-6 col-xs-6"><%= f.text_field :question  %></div>
    </div>

    <%= f.submit '確認', class: 'btn-primary', id: 'confirm' %>
  </div>
<% end %>
